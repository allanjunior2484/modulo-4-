
CREATE TABLE ALUNO (
  ID_ALUNO INT PRIMARY KEY,
  NOME VARCHAR(50),
  DATA_NASCIMENTO VARCHAR(10),
  CONTATO VARCHAR(20),
  ENDERECO VARCHAR(100)
);

CREATE TABLE LIVRO (
  ID_LIVRO INT PRIMARY KEY,
  TITULO VARCHAR(100),
  AUTOR VARCHAR(50),
  ANO INT,
  DISPONIVEL BOOLEAN,
  CODIGO INT,
  EDITORA VARCHAR(50)
);

ALTER TABLE LIVRO
ADD ISBN BIGINT(13);

ALTER TABLE LIVRO
DROP COLUMN CODIGO;
